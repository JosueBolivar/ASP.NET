                                                <div class="form-group">
                                                    <label class="col-md-3 col-xs-5 control-label">Nombres</label>
                                                    <div class="col-md-9 col-xs-7">
                                                        <input type="text" class="form-control" name="Nombres" id="Nombres" maxlength="120" placeholder="Nombres">
                                                    </div>
